import java.util.Scanner;

public class Volume{
	public String volupdown() {
		
		boolean stop = false;
		
		while (!stop) {
			Scanner sc = new Scanner(System.in);
			System.out.println("연산자 입력(+,-)");
			String a = sc.next();
			
		if(a.equals("+")) {
			String vl = "볼륨이 올라갔습니다";
		}

		if(a.equals("-")){				
			String vl = "볼륨이 내려갔습니다.";
			//System.out.println("현재 볼륨은"+result+"입니다");
			continue ;
			
			return vl;
		}
	}
}
}


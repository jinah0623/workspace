import java.util.Scanner;

public class Smartphone_volume {
	public static void main(String[] args) {
		boolean stop = false;
		while (!stop) {
			Scanner sc = new Scanner(System.in);
			System.out.println("연산자 입력(+,-)");
			String a = sc.next();

			int result = 0;
			
			if (a.equals("+")) {
				result=result+1;				
				System.out.println("volume은:" +result);

				continue;
			}
				else if(a.equals("-")){
				result=result-1;				
					System.out.println("volume은:"+result);
				continue ;
			}
			}
		}
	}


